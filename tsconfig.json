{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "./src/dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"resolveJsonModule": true
	},
	"include": [
		"src/**/*",
		"tsconfig.json"
	],
	"exclude": [
		"node_modules"
	]
}