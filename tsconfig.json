{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true
	},
	"include": [
		"src/**/*",
		"seed.ts",
		"index.ts",
		"app.ts",
		"routes",
		"models",
		"middleware",
		"controllers",
		"config"
	],
	"exclude": [
		"node_modules"
	]
}